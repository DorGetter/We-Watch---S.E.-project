<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/LogoCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ac_logo3" />


    <LinearLayout
        android:id="@+id/Comedy"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Comedy"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_movie_catagory_comedy" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Action"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Action"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="81dp"
            android:layout_height="70dp"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_movie_catagory_action" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Horror"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Horror"
            android:textStyle="bold"
            android:textSize="32dp"/>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_movie_catagory_horror" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Family"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Family"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_movie_catagory_family" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Search Movie"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_searchicon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/OpenRequestUser"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Send Request"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:src="@drawable/ac_requestuser" />

    </LinearLayout>

</LinearLayout>